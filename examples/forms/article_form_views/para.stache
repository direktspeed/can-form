<div class="form-group {{#errors 'content'}}has-error{{/errors}}">
  <label for="username" class="control-label">Paragraph</label>
  <textarea class="form-control" placeholder="Enter content" can-value="content"></textarea>
  {{#errors 'content'}}
    <ul class="bg-danger list-unstyled">
      {{#this}}
        <li>{{ . }}</li>
      {{/this}}
    </ul>
  {{/errors}}
</div>